    lcd.clear();
    lcd.print(F("Spaeter fuehlst du"));
    lcd.setCursor(0, 1);
    lcd.print(F("dich viel besser"));
    Button();
    box = 3;
  }
  if ( box == 9 ) {
    lcd.clear();
    lcd.print(F("Willst du"));
    lcd.setCursor(0, 1);
    lcd.print(F("ruebergehen?"));
    box = makeChoice(11, 10);
  }
  if ( box == 10 ) {
    lcd.clear();
    lcd.print(F("Willst du am Fl"));
    lcd.setCursor(0, 1);
    lcd.print(F("uss entlangehen "));
    box = makeChoice(11, 4);
  }
  if ( box == 11 ) {
    lcd.clear();
    lcd.print(F("Du betrittst de"));
    lcd.setCursor(0, 1);
    lcd.print(F("n Dunkel Wald"));
    Button();
    box = 43;
  }
  if ( box == 12 ) {
    lcd.clear();
    lcd.print(F("Du kommst zu"));
    lcd.setCursor(0, 1);
    lcd.print(F("einem Wasserfall"));
    Button();
    box = 13;
  }
  if ( box == 13 ) {
    lcd.clear();
    lcd.print(F("Du triffst auf"));
    lcd.setCursor(0, 1);
    lcd.print(F("einen Wanderer"));
    Button();
    box = 14;
  }
  if ( box == 14 ) {
    lcd.clear();
    lcd.print(F("Du fragst"));
    lcd.setCursor(0, 1);
    lcd.print(F("ihn ob..."));
    box = makeChoice(15, 16);
  }
  if ( box == 15 ) {
    lcd.clear();
    lcd.print(F("er weis wo die n"));
    lcd.setCursor(0, 1);
    lcd.print(F("aechste Burg ist"));
    box = AMakeChoice(16, 16, 17);
  }
  if ( box == 16 ) {
    lcd.clear();
    lcd.print(F("er weis was hint"));
    lcd.setCursor(0, 1);
    lcd.print(F("er dem Fluss ist"));
    box = AMakeChoice(14, 14, 18);
  }
  if ( box == 17 ) {
    lcd.clear();
    lcd.print(F("Er zeigt dir"));
    lcd.setCursor(0, 1);
    lcd.print(F("den Weg"));
    Button();
    box = 18;
  }
  if ( box == 18 ) {
    lcd.clear();
    lcd.print(F("Du kommst zu"));
    lcd.setCursor(0, 1);
    lcd.print(F("einer Burg"));
    Button();
    box = 20;
  }
  if ( box == 19 ) {
    lcd.clear();
    lcd.print(F("Er zeigt dir"));
    lcd.setCursor(0, 1);
    lcd.print(F("den Weg"));
    Button();
    box = 11;
  }
  if ( box == 20 ) {
    lcd.clear();
    lcd.print(F("Die Wachen lasse"));
    lcd.setCursor(0, 1);
    lcd.print(F("n dich passieren"));
    Button();
    box = 21;
  }
  if ( box == 21 ) {
    lcd.clear();
    lcd.print(F("Du gehst"));
    lcd.setCursor(0, 1);
    lcd.print(F("hinein"));
    Button();
    box = 22;
  }
  if ( box == 22 ) {
    lcd.clear();
    lcd.print(F("Du kommst zur"));
    lcd.setCursor(0, 1);
    lcd.print(F("Burg von"));
    Button();
    box = 23;
  }
  if ( box == 23 ) {
    lcd.clear();
    lcd.print(F("Kaiser"));
    lcd.setCursor(0, 1);
    lcd.print(F("Friedrich"));
    Button();
    box = 44;
  }
  if ( box == 24 ) {
    lcd.clear();
    lcd.print(F("Wohin willst"));
    lcd.setCursor(0, 1);
    lcd.print(F("du gehen?"));
    box = makeChoice(25, 28);
  }
  if ( box == 25 ) {
    lcd.clear();
    lcd.print(F("Norden"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = AMakeChoice(31, 28, 26);
  }
  if ( box == 26 ) {
    lcd.clear();
    lcd.print(F("Du kommst zu"));
    lcd.setCursor(0, 1);
    lcd.print(F("einer Lichtung"));
    Button();
    box = 27;
  }
  if ( box == 27 ) {
    lcd.clear();
    lcd.print(F("und siehst "));
    lcd.setCursor(0, 1);
    lcd.print(F("einen Haendler"));
    if ( Haendler1 == 0 ) {
      box = 34;
    }
    else if ( Haendler1 == 1 ) {
      box = 215;
    }
    Button();
  }
  if ( box == 28 ) {
    lcd.clear();
    lcd.print(F("Sued-Ost"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = AMakeChoice(25, 31, 29);
  }
  if ( box == 29 ) {
    lcd.clear();
    lcd.print(F("Du hast dich"));
    lcd.setCursor(0, 1);
    lcd.print(F("verlaufen und"));
    Button();
    box = 30;
  }
  if ( box == 30 ) {
    lcd.clear();
    lcd.print(F("kommst zu"));
    lcd.setCursor(0, 1);
    lcd.print(F("einer Burg"));
    Button();
    box = 20;
  }
  if ( box == 31 ) {
    lcd.clear();
    lcd.print(F("Westen"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = AMakeChoice(28, 25, 32);
  }
  if ( box == 32 ) {
    lcd.clear();
    lcd.print(F("Du kommst zu"));
    lcd.setCursor(0, 1);
    lcd.print(F("einem Fluss"));
    Button();
    box = 33;
  }
  if ( box == 33 ) {
    lcd.clear();
    lcd.print(F("mit einer"));
    lcd.setCursor(0, 1);
    lcd.print(F("Bruecke"));
    Button();
    box = 9;
  }
  if ( box == 34 ) {
    lcd.clear();
    lcd.print(F("Er wird "));
    lcd.setCursor(0, 1);
    lcd.print(F("ueberfallen"));
    Button();
    box = 35;
  }
  if ( box == 35 ) {
    if ( Haendler1 == 1 ) {
      lcd.clear();
      lcd.print(F("Moechtest du"));
      lcd.setCursor(0, 1);
      lcd.print(F("hingehen?"));
      box = makeChoice(215, 217);
    }
    else if ( Haendler1 == 0 ) {
      lcd.clear();
      lcd.print(F("Moechtest du"));
      lcd.setCursor(0, 1);
      lcd.print(F("ihm helfen"));
      box = makeChoice(36, 218);
    }
  }
  if ( box == 36 ) {
    lcd.clear();
    lcd.print(F("Du hilfst ihm"));
    lcd.setCursor(0, 1);
    lcd.print(F("den Dieb"));
    Button();
    box = 38;
    Haendler1 = 1;
  }
  if ( box == 37 ) {
    if ( Haendler1 == 0 ) {
      lcd.clear();
      lcd.print(F("und hoerst Rufe"));
      lcd.setCursor(0, 1);
      lcd.print(F("aus Norden"));

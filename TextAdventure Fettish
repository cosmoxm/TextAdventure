    Button();
    box = 211;
  }
  if ( box == 212 ) {
    lcd.clear();
    lcd.print(F("und wachst am na"));
    lcd.setCursor(0, 1);
    lcd.print(F("echsten Tag auf"));
    Button();
    box = 214;
  }
  if ( box == 213 ) {
    lcd.clear();
    lcd.print(F("um und faellst"));
    lcd.setCursor(0, 1);
    lcd.print(F("in einen Fluss"));
    Button();
    box = 105;
  }
  if ( box == 214 ) {
    lcd.clear();
    lcd.print(F("Du siehst eine"));
    lcd.setCursor(0, 1);
    lcd.print(F("verlassene Burg"));
    Button();
    box = 232;
  }
  if ( box == 215 ) {
    lcd.clear();
    lcd.print(F("Du gehst"));
    lcd.setCursor(0, 1);
    lcd.print(F("zu ihm"));
    Button();
    box = 216;
  }
  if ( box == 216 ) {
    lcd.clear();
    lcd.print(F("Willst du"));
    lcd.setCursor(0, 1);
    lcd.print(F("etwas kaufen?"));
    box = makeChoice(220, 217);
  }
  if ( box == 217 ) {
    lcd.clear();
    lcd.print(F("Willst du"));
    lcd.setCursor(0, 1);
    lcd.print(F("zurueckgehen?"));
    box = makeChoice(24, 227);
  }
  if ( box == 218 ) {
    lcd.clear();
    lcd.print(F("Willst du"));
    lcd.setCursor(0, 1);
    lcd.print(F("zurueckgehen?"));
    box = makeChoice(24, 35);
  }
  if ( box == 219 ) {
    lcd.clear();
    lcd.print(F("Du wachst spaet"));
    lcd.setCursor(0, 1);
    lcd.print(F("morgens auf"));
    Button();
    box = 214;
  }
  if ( box == 220 ) {
    lcd.clear();
    lcd.print(F("Er bietet"));
    lcd.setCursor(0, 1);
    lcd.print(F("dir..."));
    box = makeChoice(221, 223);
  }
  if ( box == 221 ) {
    if ( Menge9 > 0 ) {
      lcd.clear();
      lcd.print(F("Goldenes Pulver"));
      lcd.setCursor(0, 1);
      lcd.print(F("fuer 5 Gold an"));
      box = AMakeChoice(222, 224, 226);
      if ( box == 226 ) {
        if ( Goldmuenzen > 5 ) {
          box = 226;
          Menge9 -= 1;
          Goldmuenzen -= 5;
          Ware += 2;
        }
        else {
          box = 225;
        }
      }
    }
    else if ( Menge9 < 1 ) {
      box = 222;
    }
  }
  if ( box == 222 ) {
    if ( Menge10 > 0 ) {
      lcd.clear();
      lcd.print(F("Das TOTE BUCH"));
      lcd.setCursor(0, 1);
      lcd.print(F("fuer 100 Gold an"));
      box = AMakeChoice(223, 221, 226);
      if ( box == 226 ) {
        if ( Goldmuenzen > 100 ) {
          box = 226;
          Goldmuenzen -= 100;
          Glaube += 5;
          Menge10 -= 1;
        }
        else {
          box = 225;
        }
      }
    }
    else if ( Menge10 < 1 ) {
      box = 223;
    }
  }
  if ( box == 223 ) {
    if ( Menge11 > 0 ) {
      Menge11 -= 1;
      lcd.clear();
      lcd.print(F("Ein Easteregg"));
      lcd.setCursor(0, 1);
      lcd.print(F("fuer 0 Gold an"));
      box = AMakeChoice(224, 222, 228);
    }
    else if ( Menge11 < 1 ) {
      box = 224;
    }
  }
  if ( box == 224 ) {
    lcd.clear();
    lcd.print(F("Doch nichts"));
    lcd.setCursor(0, 1);
    lcd.print(F("kaufen"));
    box = AMakeChoice(221, 223, 227);
  }
  if ( box == 225 ) {
    lcd.clear();
    lcd.print(F("Du hast nicht"));
    lcd.setCursor(0, 1);
    lcd.print(F("genug Gold"));
    Button();
    box = 226;
  }
  if ( box == 226 ) {
    lcd.clear();
    lcd.print(F("Willst du noch"));
    lcd.setCursor(0, 1);
    lcd.print(F("etwas kaufen?"));
    box = makeChoice(220, 227);
  }
  if ( box == 227 ) {
    lcd.clear();
    lcd.print(F("Willst du"));
    lcd.setCursor(0, 1);
    lcd.print(F("zur Burg gehen?"));
    box = makeChoice(22, 216);
  }
  if ( box == 228 ) {
    lcd.clear();
    lcd.print(F("Herzlichen"));
    lcd.setCursor(0, 1);
    lcd.print(F("Glueckwunsch!"));
    Button();
    box = 229;
  }
  if ( box == 229 ) {
    lcd.clear();
    lcd.print(F("Du hast das East"));
    lcd.setCursor(0, 1);
    lcd.print(F("eregg gefunden"));
    Button();
    box = 230;
  }
  if ( box == 230 ) {
    lcd.clear();
    lcd.print(F("Willst du eine"));
    lcd.setCursor(0, 1);
    lcd.print(F("Belohnung haben?"));
    Easteregg = 1;
    box = makeChoice(231, 226);
  }
  if ( box == 231 ) {
    lcd.clear();
    lcd.print(F("Du hast etwas"));
    lcd.setCursor(0, 1);
    lcd.print(F("Gold erhalten"));
    Goldmuenzen += 5;
    Button();
    box = 226;
  }
  if ( box == 232 ) {
    lcd.clear();
    lcd.print(F("Du hast es"));
    lcd.setCursor(0, 1);
    lcd.print(F("geschafft"));
    Button();
    box = 233;
  }
  if ( box == 233 ) {
    lcd.clear();
    lcd.print(F("Du hast"));
    lcd.setCursor(0, 1);
    lcd.print(F("das"));
    Button();
    box = 234;
  }
  if ( box == 234 ) {
    lcd.clear();
    lcd.print(F("Spiel"));
    lcd.setCursor(0, 1);
    lcd.print(F("durchgespielt"));
    Button();
    box = 235;
  }
  if ( box == 235 ) {
    lcd.clear();
    lcd.print(F("Herzlichen"));
    lcd.setCursor(0, 1);
    lcd.print(F("Glueckwunsch!"));
    Button();
    box = 236;
  }
  if ( box == 236 ) {
    if ( Easteregg == 1 ) {
      lcd.clear();
      lcd.print(F("Du hast"));
      lcd.setCursor(0, 1);
      lcd.print(F("außerdem"));
      Button();
      lcd.clear();
      lcd.print(F("das Easteregg"));
      lcd.setCursor(0, 1);
      lcd.print(F("gefunden"));
      Button();
      lcd.clear();
      lcd.print(F("Um das Spiel no"));
      lcd.setCursor(0, 1);
      lcd.print(F("chmal zu spielen"));
      Button();
      lcd.clear();
      lcd.print(F("Druecke den"));
      lcd.setCursor(0, 1);
      lcd.print(F("Reset-Knopf"));
      Button();
    }
    else {
      lcd.clear();
      lcd.print(F("Du hast das"));
      lcd.setCursor(0, 1);
      lcd.print(F("Easteregg aber"));
      Button();
      lcd.clear();
      lcd.print(F("nicht"));
      lcd.setCursor(0, 1);
      lcd.print(F("gefunden"));
      Button();
      lcd.clear();
      lcd.print(F("Also musst"));
      lcd.setCursor(0, 1);
      lcd.print(F("du nochmal"));
      Button();
      lcd.clear();
      lcd.print(F("spielen und"));
      lcd.setCursor(0, 1);
      lcd.print(F("es finden"));
      Button();
      lcd.clear();
      lcd.print(F("Viel"));
      lcd.setCursor(0, 1);
      lcd.print(F("Glueck!"));
      Button();
      box = 0;
    }
  }
}

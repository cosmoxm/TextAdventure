    Goldmuenzen += 70;
    Button();
    box = 179;
  }
  if ( box == 179 ) {
    lcd.clear();
    lcd.print(F("Du setzt dich"));
    lcd.setCursor(0, 1);
    lcd.print(F("ans Lagerfeuer"));
    Button();
    box = 180;
  }
  if ( box == 180 ) {
    lcd.clear();
    lcd.print(F("Du legst dich"));
    lcd.setCursor(0, 1);
    lcd.print(F("Schlafen"));
    if ( Health < 4 ) {
      Health += 2;
    }
    Button();
    box = 219;
  }
  if ( box == 181 ) {
    lcd.clear();
    lcd.print(F("Du schleichst"));
    lcd.setCursor(0, 1);
    lcd.print(F("dich an"));
    Button();
    box = 182;
  }
  if ( box == 182 ) {
    lcd.clear();
    lcd.print(F("Was tust du?"));

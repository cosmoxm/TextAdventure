    box = 208;
  }
  if ( box == 208 ) {
    lcd.clear();
    lcd.print(F("Du bist sehr"));
    lcd.setCursor(0, 1);
    lcd.print(F("Muede und"));
    Button();
    box = 209;
  }
  if ( box == 209 ) {
    lcd.clear();
    lcd.print(F("verlaeufst dich"));
    lcd.setCursor(0, 1);
    lcd.print(F("im Wald"));
    Health -= 1;
    if ( Health < 1 ) {
      box = 211;
    }
    else if ( Health > 0 ) {
      box = 210;
    }
    Button();
  }
  if ( box == 210 ) {
    lcd.clear();
    lcd.print(F("Du schlaefst"));
    lcd.setCursor(0, 1);
    lcd.print(F("irgendwann ein"));
    Button();
    box = 212;
  }
  if ( box == 211 ) {
    lcd.clear();
    lcd.print(F("Du faellst"));
    lcd.setCursor(0, 1);

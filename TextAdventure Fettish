  }
  if ( box == 38 ) {
    lcd.clear();
    lcd.print(F("zu ueberwael"));
    lcd.setCursor(0, 1);
    lcd.print(F("tigen und er"));
    Button();
    box = 39;
  }
  if ( box == 39 ) {
    lcd.clear();
    lcd.print(F("schenkt dir ein"));
    lcd.setCursor(0, 1);
    lcd.print(F("paar Goldstuecke"));
    Button();
    Goldmuenzen += random(45, 76);
    Health -= 1;
    box = 40;
  }
  if ( box == 40 ) {
    lcd.clear();
    lcd.print(F("Auserdem zeigt"));
    lcd.setCursor(0, 1);
    lcd.print(F("er dir den"));
    Button();
    box = 41;
  }
  if ( box == 41 ) {
    lcd.clear();
    lcd.print(F("Weg zur "));
    lcd.setCursor(0, 1);
    lcd.print(F("naechsten Burg"));
    Button();
    box = 42;
  }
  if ( box == 42 ) {
    lcd.clear();
    lcd.print(F("Du gehst"));
    lcd.setCursor(0, 1);
    lcd.print(F("zur Burg"));
    Button();
    box = 20;
  }
  if ( box == 43 ) {
    lcd.clear();
    lcd.print(F("Es ist dunkel"));
    lcd.setCursor(0, 1);
    lcd.print(F("und unheimlich"));
    Button();
    box = 84;
  }
  if ( box == 44 ) {
    lcd.clear();
    lcd.print(F("Du gehst auf"));
    lcd.setCursor(0, 1);
    lcd.print(F("den Marktplatz"));
    Button();
    box = 45;
  }
  if ( box == 45 ) {
    lcd.clear();
    lcd.print(F("Wohin moechtest"));
    lcd.setCursor(0, 1);
    lcd.print(F("du gehen?"));
    box = makeChoice(62, 46);
  }
  if ( box == 46 ) {
    lcd.clear();
    lcd.print(F("Zum Schmied"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = AMakeChoice(47, 63, 49);
  }
  if ( box == 47 ) {
    lcd.clear();
    lcd.print(F("Zum"));
    lcd.setCursor(0, 1);
    lcd.print(F("Troedelladen"));
    box = AMakeChoice(48, 46, 50);
  }
  if ( box == 48 ) {
    lcd.clear();
    lcd.print(F("Zur Taverne"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = AMakeChoice(62, 47, 51);
  }
  if ( box == 49 ) {
    lcd.clear();
    lcd.print(F("Du gehst zum"));
    lcd.setCursor(0, 1);
    lcd.print(F("Schmied"));
    Button();
    box = 52;
  }
  if ( box == 50 ) {
    lcd.clear();
    lcd.print(F("Du gehst zum"));
    lcd.setCursor(0, 1);
    lcd.print(F("Troedelladen"));
    Button();
    box = 64;
  }
  if ( box == 51 ) {
    lcd.clear();
    lcd.print(F("Du gehst zur"));
    lcd.setCursor(0, 1);
    lcd.print(F("Taverne"));
    Button();
    box = 72;
  }
  if ( box == 52 ) {
    lcd.clear();
    lcd.print(F("Er fragt dich"));
    lcd.setCursor(0, 1);
    lcd.print(F("ob du etwas"));
    Button();
    box = 53;
  }
  if ( box == 53 ) {
    lcd.clear();
    lcd.print(F("kaufen"));
    lcd.setCursor(0, 1);
    lcd.print(F("moechtest"));
    box = makeChoice(54, 61);
  }
  if ( box == 54 ) {
    lcd.clear();
    lcd.print(F("Er bietet"));
    lcd.setCursor(0, 1);
    lcd.print(F("dir..."));
    box = makeChoice(56, 58);
  }
  if ( box == 56 ) {
    if ( Menge1 < 1 || Goldmuenzen < 15 ) {
      box = 57;
    }
    else if ( Menge1 > 0 ) {
      lcd.clear();
      lcd.print(F("Einen Dolch fuer"));
      lcd.setCursor(0, 1);
      lcd.print(F("15 Gold"));
      box = AMakeChoice(57, 59, 60);
      if ( box == 60 ) {
        Goldmuenzen -= 15;
        Attack += 1;
        Menge1 -= 1;
      }
    }
  }
  if ( box == 57 ) {
    if ( Menge2 < 1 || Goldmuenzen < 35 ) {
      box = 58;
    }
    else if ( Menge2 > 0 ) {
      lcd.clear();
      lcd.print(F("Eine Ruestung"));
      lcd.setCursor(0, 1);
      lcd.print(F("fuer 35 Gold"));
      box = AMakeChoice(58, 56, 60);
      if ( box == 60 ) {
        Goldmuenzen -= 35;
        Defense += 2;
        Menge2 -= 1;
      }
    }
  }
  if ( box == 58 ) {
    if ( Menge3 < 1 || Goldmuenzen < 40 ) {
      box = 59;
    }
    else if ( Menge3 > 0 ) {
      lcd.clear();
      lcd.print(F("Ein Schwert fuer"));
      lcd.setCursor(0, 1);
      lcd.print(F("40 Gold"));
      box = AMakeChoice(59, 57, 60);
      if ( box == 60 ) {
        Goldmuenzen -= 40;
        Attack += 4;
        Menge3 -= 1;
      }
    }
  }
  if ( box == 59 ) {
    lcd.clear();
    lcd.print(F("Doch nichts"));
    lcd.setCursor(0, 1);
    lcd.print(F("kaufen"));
    box = AMakeChoice(56, 58, 61);
  }
  if ( box == 60 ) {
    lcd.clear();
    lcd.print(F("Moechtest du no"));
    lcd.setCursor(0, 1);
    lcd.print(F("ch etwas kaufen"));
    box = makeChoice(56, 61);
  }
  if ( box == 61 ) {
    lcd.clear();
    lcd.print(F("Du gehst zurueck"));
    lcd.setCursor(0, 1);
    lcd.print(F("zum Marktplatz"));
    Button();
    box = 45;
  }
  if ( box == 62 ) {
    lcd.clear();
    lcd.print(F("In den Wald"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = AMakeChoice(63, 48, 126);
  }
  if ( box == 63 ) {
    lcd.clear();
    lcd.print(F("In den"));
    lcd.setCursor(0, 1);
    lcd.print(F("Dunkel Wald"));
    box = AMakeChoice(46, 62, 11);
  }
  if ( box == 64 ) {
    lcd.clear();
    lcd.print(F("Der Verkaeufer"));
    lcd.setCursor(0, 1);
    lcd.print(F("fragt dich"));
    Button();
    box = 65;
  }
  if ( box == 65 ) {
    lcd.clear();
    lcd.print(F("ob du etwas"));
    lcd.setCursor(0, 1);
    lcd.print(F("kaufen moechtest"));
    box = makeChoice(66, 61);
  }
  if ( box == 66 ) {
    lcd.clear();
    lcd.print(F("Er bietet"));
    lcd.setCursor(0, 1);
    lcd.print(F("dir..."));
    box = makeChoice(69, 67);
  }
  if ( box == 67 ) {
    if ( Menge4 < 1 || Goldmuenzen < 30 ) {
      box = 68;
    }
    else if ( Menge1 > 0 ) {
      lcd.clear();
      lcd.print(F("Eine  Giftphiole"));
      lcd.setCursor(0, 1);
      lcd.print(F("fuer 30 Gold"));
      box = AMakeChoice(68, 70, 71);
      if ( box == 71 ) {
        Goldmuenzen -= 30;
        Menge4 -= 1;
      }
    }
  }
  if ( box == 68 ) {
    if ( Menge5 < 1 || Goldmuenzen < 5 ) {
      box = 69;
    }
    else if ( Menge1 > 0 ) {
      lcd.clear();
      lcd.print(F("Einen Schnaps"));
      lcd.setCursor(0, 1);
      lcd.print(F("fuer 5 Gold"));
      box = AMakeChoice(69, 67, 71);
      if ( box == 71 ) {
        Goldmuenzen -= 5;
        Ware += 1;
        Menge5 -= 1;
      }
    }
  }
  if ( box == 69 ) {
    if ( Menge6 < 1 || Goldmuenzen < 15 ) {
      box = 70;
    }
    else if ( Menge1 > 0 ) {
      lcd.clear();
      lcd.print(F("Seltsame Pilze"));
      lcd.setCursor(0, 1);
      lcd.print(F("fuer 15 Gold"));
      box = AMakeChoice(70, 68, 71);
      if ( box == 71 ) {
        Goldmuenzen -= 15;
        Ware += 2;
        Menge6 -= 1;
      }
    }
  }
  if ( box == 70 ) {
    lcd.clear();
    lcd.print(F("Doch nichts"));
    lcd.setCursor(0, 1);
    lcd.print(F("kaufen"));
    box = AMakeChoice(67, 69, 61);
  }
  if ( box == 71 ) {
    lcd.clear();
    lcd.print(F("Moechtest du no"));
    lcd.setCursor(0, 1);
    lcd.print(F("ch etwas kaufen"));
    box = makeChoice(67, 61);
  }
  if ( box == 72 ) {
    if ( Ware < 1 ) {
      box = 77;
    }
    else if ( Ware > 0 ) {
      lcd.clear();
      lcd.print(F("Eine verhuellte"));
      lcd.setCursor(0, 1);
      lcd.print(F("Person fragt"));
      Button();
      box = 73;
    }
  }
  if ( box == 73 ) {
    lcd.clear();
    lcd.print(F("dich ob du"));
    lcd.setCursor(0, 1);
    lcd.print(F("ihm Pilze oder"));
    Button();
    box = 74;
  }
  if ( box == 74 ) {
    lcd.clear();
    lcd.print(F("Schnaps verkau"));
    lcd.setCursor(0, 1);
    lcd.print(F("fen kannst"));
    Button();

    lcd.clear();
    lcd.print(F("Moechtest du"));
    lcd.setCursor(0, 1);
    lcd.print(F("dich ausruhen"));
    box = makeChoice(8, 3);
  }
  if ( box == 7 ) {
    lcd.clear();
    lcd.print(F("Du gehst in"));

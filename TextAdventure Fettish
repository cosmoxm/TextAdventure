    box = makeChoice(183, 184);
  }
  if ( box == 183 ) {
    lcd.clear();
    lcd.print(F("Angreifen"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = AMakeChoice(184, 184, 185);
  }
  if ( box == 184 ) {
    lcd.clear();
    lcd.print(F("Zurueckgehen"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = AMakeChoice(182, 182, 153);
  }
  if ( box == 185 ) {
    lcd.clear();
    lcd.print(F("Du ueberraschst"));
    lcd.setCursor(0, 1);
    lcd.print(F("die Raueber"));
    Button();
    box = 186;
  }
  if ( box == 186 ) {
    lcd.clear();
    lcd.print(F("Du kannst einen"));
    lcd.setCursor(0, 1);
    lcd.print(F("ueberwaeltigen"));
    Button();
    box = 187;
  }
  if ( box == 187 ) {
    lcd.clear();
    lcd.print(F("Der andere"));
    lcd.setCursor(0, 1);
    lcd.print(F("greift dich an"));
    Button();
    box = 188;
  }
  if ( box == 188 ) {
    lcd.clear();
    lcd.print(F("Was tust du?"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = makeChoice(189, 191);
  }
  if ( box == 189 ) {
    lcd.clear();
    lcd.print(F("Angreifen"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = AMakeChoice(190, 191, 196);
  }
  if ( box == 190 ) {
    lcd.clear();
    lcd.print(F("Beten"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = AMakeChoice(189, 191, 192);
  }
  if ( box == 191 ) {
    lcd.clear();
    lcd.print(F("Fliehen"));
    lcd.setCursor(0, 1);
    lcd.print(F(""));
    box = AMakeChoice(189, 190, 198);
  }
  if ( box == 192 ) {
    EnemyHealth = 3;
    EnemyDefense = 2;
    EnemyGlaube = 1;
    EnemyAttack = 3;
    box = 193;
  }
  if ( box == 193 ) {
    if ( EnemyAttack - Defense > 0 ) {
      Health -= EnemyAttack - Defense;
      if ( Health < 1 ) {
        box = 194;
      }
    }
    if ( Glaube - EnemyGlaube > 0 ) {
      EnemyHealth -= Glaube - EnemyGlaube;
      if ( EnemyHealth < 1 ) {
        box = 195;
      }
    }
  }
  if ( box == 194 ) {
    lcd.clear();
    lcd.print(F("Er toetet"));
    lcd.setCursor(0, 1);
    lcd.print(F("dich"));
    Button();
    box = 105;
  }
  if ( box == 195 ) {
    lcd.clear();
    lcd.print(F("Du besiegst"));
    lcd.setCursor(0, 1);
    lcd.print(F("ihn"));
    Button();
    box = 174;
  }
  if ( box == 196 ) {
    EnemyHealth = 3;
    EnemyDefense = 2;
    EnemyGlaube = 1;
    EnemyAttack = 3;
    box = 169;
  }
  if ( box == 197 ) {
    if ( EnemyAttack - Defense > 0 ) {
      Health -= EnemyAttack - Defense;
      if ( Health < 1 ) {
        box = 194;
      }
    }
    if ( Attack - EnemyDefense > 0 ) {
      EnemyHealth -= Attack - EnemyDefense;
      if ( EnemyHealth < 1 ) {
        box = 195;
      }
    }
  }
  if ( box == 198 ) {
    Health -= 1;
    if ( Health < 1 ) {
      box = 194;
    }
    lcd.clear();
    lcd.print(F("Du versuchst"));
    lcd.setCursor(0, 1);
    lcd.print(F("zu fliehen"));
    Button();
    box = 199;
  }
  if ( box == 199 ) {
    lcd.clear();
    lcd.print(F("Er holt dich"));
    lcd.setCursor(0, 1);
    lcd.print(F("ein"));
    Button();
    box = 188;
  }
  if ( box == 200 ) {
    lcd.clear();
    lcd.print(F("Du gehst"));
    lcd.setCursor(0, 1);
    lcd.print(F("nach Sueden"));
    Button();
    box = 201;
  }
  if ( box == 201 ) {
    lcd.clear();
    lcd.print(F("Es wird"));
    lcd.setCursor(0, 1);
    lcd.print(F("Dunkel"));
    Button();
    box = 202;
  }
  if ( box == 202 ) {
    lcd.clear();
    lcd.print(F("Du hoerst"));
    lcd.setCursor(0, 1);
    lcd.print(F("ein Heulen"));
    Button();
    box = 203;
  }
  if ( box == 203 ) {
    lcd.clear();
    lcd.print(F("Du hoerst"));
    lcd.setCursor(0, 1);
    lcd.print(F("ein Heulen"));
    Button();
    box = 204;
  }
  if ( box == 204 ) {
    lcd.clear();

      if ( EnemyHealth < 1 ) {
        box = 164;
      }
    }
  }
  if ( box == 172 ) {
    Health -= 2;
    if ( Health < 1 ) {
      box = 163;
    }
    lcd.clear();
    lcd.print(F("Du versuchst"));
    lcd.setCursor(0, 1);
    lcd.print(F("zu fliehen"));
    Button();
    box = 173;
  }
  if ( box == 173 ) {
    lcd.clear();
    lcd.print(F("Sie holen dich"));
    lcd.setCursor(0, 1);
    lcd.print(F("ein"));
    Button();
    box = 162;
  }
  if ( box == 174 ) {
    lcd.clear();
    lcd.print(F("Was tust"));
    lcd.setCursor(0, 1);
    lcd.print(F("du?"));
    box = makeChoice(175, 176);
  }
  if ( box == 175 ) {
    lcd.clear();
    lcd.print(F("Ihre Sachen"));
    lcd.setCursor(0, 1);
    lcd.print(F("nehmen"));
    box = AMakeChoice(176, 176, 177);
  }
  if ( box == 176 ) {
    lcd.clear();
    lcd.print(F("Ans Lagerfeuer"));
    lcd.setCursor(0, 1);
    lcd.print(F("setzen"));
    box = AMakeChoice(175, 175, 179);
  }
  if ( box == 177 ) {
    lcd.clear();
